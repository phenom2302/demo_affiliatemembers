<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">affiliatemembers_form.affiliatemembers_form_data_source</item>
			<item name="deps" xsi:type="string">affiliatemembers_form.affiliatemembers_form_data_source</item>
		</item>
		<item name="label" translate="true" xsi:type="string">General Information</item>
		<item name="config" xsi:type="array">
			<item name="dataScope" xsi:type="string">data</item>
			<item name="namespace" xsi:type="string">affiliatemembers_form</item>
		</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
		<item name="buttons" xsi:type="array">
			<item name="back" xsi:type="string">Demo\AffiliateMembers\Block\Adminhtml\Affiliatemembers\Edit\BackButton</item>
			<item name="delete" xsi:type="string">Demo\AffiliateMembers\Block\Adminhtml\Affiliatemembers\Edit\DeleteButton</item>
			<item name="save" xsi:type="string">Demo\AffiliateMembers\Block\Adminhtml\Affiliatemembers\Edit\SaveButton</item>
			<item name="save_and_continue" xsi:type="string">Demo\AffiliateMembers\Block\Adminhtml\Affiliatemembers\Edit\SaveAndContinueButton</item>
		</item>
	</argument>
	<dataSource name="affiliatemembers_form_data_source">
		<argument name="dataProvider" xsi:type="configurableObject">
			<argument name="class" xsi:type="string">Demo\AffiliateMembers\Model\Affiliatemembers\DataProvider</argument>
			<argument name="name" xsi:type="string">affiliatemembers_form_data_source</argument>
			<argument name="primaryFieldName" xsi:type="string">affiliatemember_id</argument>
			<argument name="requestFieldName" xsi:type="string">affiliatemember_id</argument>
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="submit_url" path="*/*/save" xsi:type="url"/>
				</item>
			</argument>
		</argument>
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
	</dataSource>
	<fieldset name="General">
		<argument name="data" xsi:type="array">
			<item name="config" xsi:type="array">
				<item name="label" xsi:type="string"/>
			</item>
		</argument>
		<field name="name">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Name</item>
					<item name="formElement" xsi:type="string">input</item>
					<item name="source" xsi:type="string">Affiliatemembers</item>
					<item name="sortOrder" xsi:type="number">10</item>
					<item name="dataScope" xsi:type="string">name</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="status">
			<argument name="data" xsi:type="array">
				<item name="options" xsi:type="object">Demo\AffiliateMembers\Model\Status\Options</item>
				<item name="config" xsi:type="array">
					<item name="dataType" xsi:type="string">text</item>
					<item name="label" translate="true" xsi:type="string">Status</item>
					<item name="formElement" xsi:type="string">select</item>
					<item name="source" xsi:type="string">Affiliatemembers</item>
					<item name="sortOrder" xsi:type="number">20</item>
					<item name="dataScope" xsi:type="string">status</item>
					<item name="default" xsi:type="string">1</item>
					<item name="validation" xsi:type="array">
						<item name="required-entry" xsi:type="boolean">true</item>
					</item>
				</item>
			</argument>
		</field>
		<field name="image">
		    <argument name="data" xsi:type="array">
		        <item name="config" xsi:type="array">
		            <item name="dataType" xsi:type="string">string</item>
		            <item name="source" xsi:type="string">Affiliatemembers</item>
		            <item name="label" xsi:type="string" translate="true">Image</item>
		            <item name="visible" xsi:type="boolean">true</item>
		            <item name="isMultipleFiles" xsi:type="boolean">false</item>
		            <item name="formElement" xsi:type="string">fileUploader</item>
		            <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
		            <item name="previewTmpl" xsi:type="string">Demo_AffiliateMembers/image-preview</item>
		            <item name="required" xsi:type="boolean">false</item>
		            <item name="uploaderConfig" xsi:type="array">
		                <item name="url" xsi:type="url" path="affiliate_members/image/upload"/>
		            </item>
		        </item>
		    </argument>
		</field>
	</fieldset>
</form>
